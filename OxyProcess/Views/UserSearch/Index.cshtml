@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('[id*=SearchTag]').on('keypress', function () {
                var number = $(this).val();
                if (number.length == 2) {
                    $(this).val($(this).val() + '-');
                }
                else if (number.length == 7) {
                    $(this).val($(this).val() + '-');
                }

                else if (number.length == 7) {
                    $(this).val($(this).val() + '-');
                }

                else if (number.length == 12) {
                    $(this).val($(this).val() + '-');
                }
            });
        });
    </script>
